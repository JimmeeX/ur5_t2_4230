<?xml version="1.0" encoding="UTF-8" ?>
<launch>
        <!-- overwriting these args -->
        <arg name="debug" default="false" />
        <arg name="gui" default="true" />
        <arg name="pause" default="false" />
        <arg name="world" default="$(find ur5_t2_4230)/world/ur5_world.world" />
        <arg name="limited" default="true"/>
	<arg name="sim" default="true" />
	<arg name ="camera_name" default = "camera" />
	<arg name ="frame_name" default = "frame"/>
	<arg name = "link_name" default = "world"/>
 
        <!-- include gazebo_ros launcher -->
        <include file="$(find gazebo_ros)/launch/empty_world.launch">
                <arg name="world_name" value="$(arg world)" />
                <arg name="debug" value="$(arg debug)" />
                <arg name="gui" value="$(arg gui)" />
                <arg name="paused" value="$(arg pause)" />
                <arg name="use_sim_time" value="true" />
        </include>

	  <!-- spwan ur5 -->
	  <!-- send robot urdf to param server -->
	  <include file="$(find ur_description)/launch/ur5_upload.launch">
	    <arg name="limited" value="$(arg limited)"/>
	  </include>

  <!-- spawn the conveyor_belt in gazebo -->
	<node name="spawn_conveyor_belt" pkg="gazebo_ros" type="spawn_model" args="-file $(find ur5_t2_4230)/models/conveyor_belt_old/conveyor_belt.urdf -urdf -model conveyor_belt" />

	<!-- push robot_description to factory and spawn robot in gazebo -->
	  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -z 1 -y 1" respawn="false" output="screen" />

	  <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>

	  <rosparam file="$(find ur_gazebo)/controller/arm_controller_ur5.yaml" command="load"/>
	  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>

	  <!-- Remap follow_joint_trajectory -->
	  <remap if="$(arg sim)" from="/follow_joint_trajectory" to="/arm_controller/follow_joint_trajectory"/>

</launch>
